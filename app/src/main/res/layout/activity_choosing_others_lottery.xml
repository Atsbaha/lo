<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosingOthersLottery"
    android:orientation="vertical"
    android:layout_marginTop="40dp">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/tombolaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <Button
                android:id="@+id/btncheckTombola"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Tombola Lottery"
                android:background="@color/colorPrimary"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/lyu1CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <Button
                android:id="@+id/btnCheckLyu1"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Lyu1 Lottery"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/edlCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <Button
                android:id="@+id/btncheckEdl"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Edl Lottery"
                android:background="@color/colorPrimary"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/tinsaeeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <Button
                android:id="@+id/btnCheckTinsaee"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Tinsaee Lottery"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp">

        <CheckBox
            android:id="@+id/lyu2CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <Button
            android:id="@+id/btnCheckLyu2"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Lyu2"
            android:background="@color/colorPrimary"/>

    </LinearLayout>



    <Button
        android:id="@+id/btnOthersCheckNext"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:text="Next"
        android:background="@color/colorPrimary"/>



</LinearLayout>