<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EachPaymentt2"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/first1010"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="10 Birr"
                android:background="@color/colorPrimary"/>

            <CheckBox
                android:id="@+id/firstCheck10"
                android:layout_marginLeft="70dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/second1010"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="10 Birr"
                android:layout_marginLeft="4dp"
                android:background="@color/colorPrimary"/>

            <CheckBox
                android:id="@+id/secondCheck10"
                android:layout_marginLeft="70dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/third1010"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="10 Birr"
                android:background="@color/colorPrimary"/>

            <CheckBox
                android:id="@+id/thirdCheck10"
                android:layout_marginLeft="70dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/fourth1010"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="10 Birr"
                android:layout_marginLeft="4dp"
                android:background="@color/colorPrimary"/>

            <CheckBox
                android:id="@+id/fourthCheck10"
                android:layout_marginLeft="70dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/eachNext10"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Next"/>

</LinearLayout>