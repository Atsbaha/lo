<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZhonLottery">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Ticket Number"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/EnterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="berheteweld@gmail.com"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btnZhonLottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Ticket Number"
        android:layout_below="@+id/EnterEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        />

    <Button
        android:id="@+id/btnUniqueNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Get Unique Number"
        android:layout_gravity="center"
        android:layout_below="@+id/btnZhonLottery"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:id="@+id/readAndWrite"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUniqueNumber">
    <Button
        android:id="@+id/btnWrite"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save Ticket Number"
        android:layout_gravity="center"
        android:layout_below="@+id/btnZhonLottery"
        android:layout_marginTop="20dp"

        />
    <!-- android:onClick="writeExternalMessage"-->
    <Button
        android:id="@+id/btnRead"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Insert Ticket Number"
        android:layout_gravity="center"
        android:layout_below="@+id/btnWrite"
        android:layout_marginTop="20dp"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/NumberShower"
        android:layout_below="@+id/readAndWrite"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Number here"/>


        />


</RelativeLayout>