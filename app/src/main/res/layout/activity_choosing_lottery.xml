<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosingLottery"
    android:orientation="vertical"
    android:layout_marginTop="40dp">


    <!--<include-->
        <!--layout="@layout/activity_all_operations"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/zhonCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btncheckZhon"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Zhon Lottery"
            android:background="@color/colorPrimary"/>

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/enkutatashCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <Button
            android:id="@+id/btnCheckEnkutatash"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Enkutatash Lottery"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/genaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <Button
                android:id="@+id/btncheckGena"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Gena Lottery"
                android:background="@color/colorPrimary"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/fetanCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <Button
                android:id="@+id/btnCheckFetan"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Fetan Lottery"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp">

        <CheckBox
            android:id="@+id/othersCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <Button
            android:id="@+id/btnCheckOthers"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Others"
            android:background="@color/colorPrimary"/>

    </LinearLayout>



    <Button
        android:id="@+id/btnCheckNext"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:text="Next"
        android:background="@color/colorPrimary"/>



</LinearLayout>