<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lyu2Lottery">

    <TextView
        android:id="@+id/Lyu2textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Ticket Number"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/EnterLyu2Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lyu2textView"
        android:text="berheteweld@gmail.com"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btnLyu2Lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Ticket Number"
        android:layout_below="@+id/EnterLyu2Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"

        />

    <Button
        android:id="@+id/btnLyu2UniqueNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Get Unique Number"
        android:layout_gravity="center"
        android:layout_below="@+id/btnLyu2Lottery"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>


    <LinearLayout
        android:id="@+id/Lyu2readAndWrite"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLyu2UniqueNumber">
        <Button
            android:id="@+id/btnLyu2Write"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Save Ticket Number"
            android:layout_gravity="center"
            android:layout_below="@+id/btnLyu2Lottery"
            android:layout_marginTop="20dp"

            />
        <!-- android:onClick="writeExternalMessage"-->
        <Button
            android:id="@+id/btnLyu2Read"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Insert Ticket Number"
            android:layout_gravity="center"
            android:layout_below="@+id/btnLyu2Write"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/Lyu2NumberShower"
        android:layout_below="@+id/Lyu2readAndWrite"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Number here"/>


    />


</RelativeLayout>